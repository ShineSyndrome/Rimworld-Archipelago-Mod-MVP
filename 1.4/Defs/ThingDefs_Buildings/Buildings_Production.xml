  <!-- ========================= Work tables ==========================-->

  <ThingDef ParentName="BenchBase">
    <defName>ArchipelagoBench</defName>
    <label>Archipelago Bench</label>
    <description>A workstation for archipelago.</description>
	<thingClass>Building_WorkTable</thingClass>

    <graphicData>
      <texPath>Building/archipelago_bench</texPath>
	  <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <damageData>
		<rect>(0, 0, 1, 1)</rect>
	  </damageData>
    </graphicData>
	<!-- <altitudeLayer>FloorEmplacement</altitudeLayer> -->
	<constructEffect>ConstructMetal</constructEffect>
	<castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.10</staticSunShadowHeight>
	<altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.8</fillPercent>
	
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>

    <useHitPoints>True</useHitPoints>
    <statBases>
		<MaxHitPoints>150</MaxHitPoints>
		<WorkToBuild>500</WorkToBuild>
		<Flammability>1.0</Flammability>
		<Cleanliness>-2</Cleanliness>
    </statBases>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>Make_Kibble</li> <!--just a test-->
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
	  <paintable>false</paintable>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
	  <forceShowRoomStats>true</forceShowRoomStats>
    </building>
	<!-- TODO comps -->
	<comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>
